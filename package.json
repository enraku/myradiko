{
  "name": "myradiko",
  "version": "1.0.0",
  "description": "radiko番組表表示と録音・録音予約Webアプリケーション",
  "main": "server/app.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/app.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/app.js",
    "test": "jest",
    "db:init": "node server/utils/initDatabase.js",
    "db:test": "node server/utils/testDatabase.js",
    "radiko:test": "node server/utils/testRadikoAPI.js",
    "api:test": "node server/utils/testAPI.js"
  },
  "keywords": [
    "radiko",
    "recording",
    "vue",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
